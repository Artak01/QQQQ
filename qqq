#include <iostream>

int foo(int n){
    int k = 0;
    while(n){
        k = n % 10;
        if(k %2 != 0){
            return 0;
        }
        k = 0;
        n /= 10;
    }
    return 1;

}
int main(){
    int n = 0;
    std::cout << "number: ";
    std::cin >> n;
    std::cout << "x = " << foo(n);
}


