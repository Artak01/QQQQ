#include <iostream>

int revers(int n){
    int x = 0;
    while(n){
        x *= 10;
        x += n %10;
        n /= 10;
    }
    return x;
}

int foo(int num){
    int k = 0;
    while(true){
        if(num == revers(num)){
            return k;
        }
        num = num + revers(num);
        k++;
    }
}
int main(){
    int n = 0;
    std::cout << "number: ";
    std::cin >> n;
    std::cout << "x = " << foo(n);
}

